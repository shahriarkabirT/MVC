    <body>
        
        <marquee> <p class="titleSentence"><h1>Welcome to the biggest Blockbuster</h1></p> </marquee>
        

        <div class="container">
            <div class="hero-section">
                <html>
            
                <head>
                    <meta charset="UTF-8">
                    <meta name="viewport" content="width=device-width, initial-scale=1.0">
                    <title>Image Slider</title>
                    <style>
                        body {
                            font-family: "Times New Roman", Times, serif;
                            margin: 0;
                            padding: 0;
                        }

                        .slider-container {
                            width: 100%;
                            max-width: 300px;
                            margin: 50px auto;
                            overflow: hidden;
                            position: relative;
                        }

                        .slide {
                            width: 100%;
                            display: none;
                        }

                            .slide.active {
                                display: block;
                            }

                        img {
                            width: 100%;
                            height: auto;
                        }

                        .slider-pagination {
                            display: flex;
                            justify-content: center;
                            margin-top: 20px;
                        }

                            .slider-pagination button {
                                border: none;
                                background-color: #ccc;
                                width: 12px;
                                height: 12px;
                                border-radius: 50%;
                                margin: 0 5px;
                                cursor: pointer;
                            }

                                .slider-pagination button.active {
                                    background-color: #0080ff;
                                }

                    </style>
                </head>
                <body>
                    <div class="slider-container">
                        <div class="slide active">
                            <img src="/image/surongo.jpeg" alt="Image 1">
                        </div>
                        <div class="slide">
                            <img src="/image/priyotoma.jpg" alt="Image 2">
                        </div>
                        <div class="slide">
                            <img src="/image/hawa.jpg" alt="Image 3">
                        </div>
                    </div>

                    <div class="slider-pagination">
                        <button class="active" onclick="changeSlide(0)"></button>
                        <button onclick="changeSlide(1)"></button>
                        <button onclick="changeSlide(2)"></button>
                    </div>

                    <script>let slideIndex = 0;
        const slides = document.querySelectorAll(".slide");
        const paginationButtons = document.querySelectorAll(".slider-pagination button");

        function showSlide(index) {
            slides.forEach((slide) => slide.classList.remove("active"));
            paginationButtons.forEach((button) => button.classList.remove("active"));

            slides[index].classList.add("active");
            paginationButtons[index].classList.add("active");
        }

        function nextSlide() {
            slideIndex = (slideIndex + 1) % slides.length;
            showSlide(slideIndex);
        }

        function changeSlide(index) {
            slideIndex = index;
            showSlide(slideIndex);
        }

        setInterval(nextSlide, 3000); // Change slide every 3 seconds (3000 milliseconds)</script>
                </body>
            </html>






            <h2 class="movie-title">MOVIES</h2>
            
                <a class="cta-button" asp-area="" asp-controller="Customers" asp-action="Buy">Book your tickets Now!</a><br/>
            </div>
